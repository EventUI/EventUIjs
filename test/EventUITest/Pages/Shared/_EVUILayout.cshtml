<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventUITest</title>
    @RenderSection("CSS", required: false)
</head>
<body>
    <header>
        <h1>EventUI Test Harness</h1>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - EventUITest - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!--ASP's "asp-src-include" tag helper doesn't like glob patterns that point at files that fall outside of the wwwroot folder, so we have to manually include each module.-->
    <script src="/evuisrc/EventUI.js"></script>
    <script src="/evuisrc/Modules/Binding.js"></script>
    <script src="/evuisrc/Modules/Core.js"></script>
    <script src="/evuisrc/Modules/Dialogs.js"></script>
    <script src="/evuisrc/Modules/Diff.js"></script>
    <script src="/evuisrc/Modules/Dom.js"></script>
    <script src="/evuisrc/Modules/DomEvents.js"></script>
    <script src="/evuisrc/Modules/DomTree.js"></script>
    <script src="/evuisrc/Modules/Dropdowns.js"></script>
    <script src="/evuisrc/Modules/Enums.js"></script>
    <script src="/evuisrc/Modules/Events.js"></script>
    <script src="/evuisrc/Modules/EventStream.js"></script>
    <script src="/evuisrc/Modules/HtmlLoader.js"></script>
    <script src="/evuisrc/Modules/Http.js"></script>
    <script src="/evuisrc/Modules/IFrames.js"></script>
    <script src="/evuisrc/Modules/Modals.js"></script>
    <script src="/evuisrc/Modules/Observers.js"></script>
    <script src="/evuisrc/Modules/Panes.js"></script>
    <script src="/evuisrc/Modules/PopIns.js"></script>
    <script src="/evuisrc/Modules/Styles.js"></script>
    <script src="/evuisrc/Modules/TreeView.js"></script>
    <script src="/evuisrc/Modules/UIHandler.js"></script>

    <script src="/evuisrc/Test/EVUITest.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
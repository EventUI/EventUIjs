@page
@model EventUITest.Pages.Unit.TestRunnerModel
@{
    Layout = "_EVUITestLayout";
}

@section Scripts
{
    <script src="/js/UnitTesting/UnitTestRunner.js"></script>
    @if (Model.ServerArgs.commonLibPaths != null)
    {
        @foreach (string commonFile in Model.ServerArgs.commonLibPaths)
        {
            <script src="@commonFile"></script>
        }
    }

    <script>
        const TestRunnerServerArgs = @Model.GetServerArgsJSON();
    </script>
    <script>
        var runner = new EVUIUnit.TestRunner();
        runner.initialize(TestRunnerServerArgs);
        runner.run();

    </script>
}